    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
        },
        {
            "name": "Debug Construct CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/frontend/cli",
            "args": ["new", "--agent", "coder"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Construct Daemon",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/frontend/cli",
            "args": ["daemon", "run", "--listen-unix", "/tmp/construct.sock", "--log-level", "debug"],
            "cwd": "${workspaceFolder}",
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 1200,
                "maxArrayValues": 64,
                "maxStructFields": -1
            }
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "0"
        }
    ]
}